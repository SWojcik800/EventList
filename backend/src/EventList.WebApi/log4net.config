<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<appender name="EventListDebug" type="log4net.Appender.DebugAppender" >
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
		</layout>
	</appender>
	<appender name="All" type="log4net.Appender.RollingFileAppender">
		<file value="EventListAll.log" />
		<appendToFile value="true" />
		<maximumFileSize value="100KB" />
		<maxSizeRollBackups value="2" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %5level %logger.%method [%line] - MESSAGE: %message%newline %exception" />
		</layout>
	</appender>
	<appender name="ErrorsOnly" type="log4net.Appender.RollingFileAppender">
		<file value="EventListErrors.log" />
		<appendToFile value="true" />
		<maximumFileSize value="100KB" />
		<maxSizeRollBackups value="2" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %5level %logger.%method [%line] - MESSAGE: %message%newline %exception" />
		</layout>
		<filter type="log4net.Filter.LevelRangeFilter">
			<levelMin value="ERROR" />
			<levelMax value="FATAL" />
		</filter>
	</appender>
	<root>
		<level value="ALL"/>
		<appender-ref ref="EventListDebug" />
		<appender-ref ref="All" />
		<appender-ref ref="ErrorsOnly" />
	</root>
</log4net>