<Window x:Class="WPF_DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="196,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding TextVal, Mode = TwoWay}" />
        <Button Content="Save&#xD;&#xA;" HorizontalAlignment="Left" Margin="196,118,0,0" VerticalAlignment="Top" Width="92" Height="26" Click="Button_Click" />

    </Grid>
</Window>
